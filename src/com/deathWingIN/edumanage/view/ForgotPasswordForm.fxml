            <Font name="System Bold" size="13.0" />
         </font>
      </TextField>
      <Button fx:id="btn" layoutX="23.0" layoutY="130.0" mnemonicParsing="false" onAction="#sendCodeOnAction" prefHeight="50.0" prefWidth="301.0" style="-fx-background-color: #4F6F52;" text="Send verification Code" textFill="WHITE">
